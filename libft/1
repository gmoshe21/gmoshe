#include "libft.h"

void		*ft_memcpy(void *destination, const void *source, size_t n)
{
	size_t	i;

	i = 0;
	while (n != 0)
	{
		((char*)destination)[i] = ((char*)source)[i];
		i++;
		n--;
	}
	return (destination);
}
